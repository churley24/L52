import turtle

riley = turtle.Turtle()
riley.width(5)
riley.speed(0)

def draw_star(color):
    for side in range(5):
        riley.forward(100)
        riley.right(144)
        riley.color(color)

mood = input("What is your mood? \n")

if mood == "happy":
    draw_star("pink")
elif mood == "sad":
    draw_star("blue")
elif mood == "sleepy":
    draw_star("green")
else:
    mood == "angry"
    draw_star("red")
